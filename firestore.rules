rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isCoach() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }
    
    function isAdminOrCoach() {
      return isAdmin() || isCoach();
    }
    
    function isValidUserId() {
      return request.resource.data.userId == request.auth.uid;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdminOrCoach();
      // Allow user creation during signup (must match their auth UID)
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId && 
                       request.resource.data.uid == userId &&
                       // Ensure default role is 'user' unless set by admin
                       (request.resource.data.role == 'user' || isAdmin());
      // Allow users to update their own profile (except role and uid)
      allow update: if isOwner(userId) && 
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid']) ||
                       isAdmin();
      allow delete: if isAdmin();
    }
    
    // Workout Plans
    match /workout-plans/{planId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrCoach());
      allow create: if isAuthenticated() && 
                       isValidUserId() &&
                       request.resource.data.status in ['active', 'archived'];
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin()) &&
                       request.resource.data.userId == resource.data.userId; // prevent userId change
      allow delete: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Workout Sessions
    match /workout-sessions/{sessionId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrCoach());
      allow create: if isAuthenticated() && isValidUserId();
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin()) &&
                       request.resource.data.userId == resource.data.userId;
      allow delete: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Exercises
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated() && 
                     (resource.data.isPublic == true || 
                      resource.data.createdBy == request.auth.uid || 
                      isAdminOrCoach());
      allow create: if isAdminOrCoach() && 
                       request.resource.data.createdBy == request.auth.uid;
      allow update: if isAuthenticated() && 
                       (resource.data.createdBy == request.auth.uid || isAdmin()) && 
                       request.resource.data.createdBy == resource.data.createdBy;
      allow delete: if isAdmin();
    }
    
    // Workout Templates (admin-created, public templates for users)
    match /workout-templates/{templateId} {
      allow read: if isAuthenticated() && 
                     (resource.data.isPublic == true || isAdminOrCoach());
      allow create: if isAdminOrCoach() && 
                       request.resource.data.createdBy == request.auth.uid;
      allow update: if isAdminOrCoach();
      allow delete: if isAdmin();
    }
    
    // Progress Entries
    match /progress-entries/{entryId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrCoach());
      allow create: if isAuthenticated() && isValidUserId();
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin()) &&
                       request.resource.data.userId == resource.data.userId;
      allow delete: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Goals
    match /goals/{goalId} {
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrCoach());
      allow create: if isAuthenticated() && isValidUserId();
      allow update: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin()) &&
                       request.resource.data.userId == resource.data.userId;
      allow delete: if isAuthenticated() && 
                       (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // Activity Logs (append-only for users, full access for admins)
    match /activity-logs/{logId} {
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && 
                       isValidUserId() &&
                       request.resource.data.action in ['create', 'update', 'delete', 'login', 'other'] &&
                       request.resource.data.resourceType in ['workout-plan', 'workout-session', 'user', 'profile', 'exercise', 'progress', 'goal', 'system'];
      allow update: if false; // Activity logs are immutable
      allow delete: if isAdmin();
    }
    
    // Catch-all: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}