rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================
    // HELPER FUNCTIONS
    // ============================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isCoach() {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'coach';
    }
    
    function isAdminOrCoach() {
      return isAdmin() || isCoach();
    }
    
    function isValidUserId() {
      return request.resource.data.userId == request.auth.uid;
    }
    
    // ============================================================
    // USER PROFILES
    // ============================================================
    
    match /users/{userId} {
      // Users can read their own profile, admins/coaches can read all
      allow read: if isOwner(userId) || isAdminOrCoach();
      
      // Only the user themselves can create their profile
      // Must set uid to match the document ID
      allow create: if isOwner(userId) && 
                       request.resource.data.uid == userId;
      
      // Users can update their own profile, admins can update any
      // Users cannot change their own role
      allow update: if (isOwner(userId) && 
                        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid']))) ||
                       isAdmin();
      
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // ============================================================
    // WORKOUT PLANS
    // ============================================================
    
    match /workout-plans/{planId} {
      // Read: own plans, or if admin/coach
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrCoach());
      
      // Create: must set userId to own uid
      allow create: if isAuthenticated() && 
                       isValidUserId();
      
      // Update/Delete: own plans, or if admin
      allow update, delete: if isAuthenticated() && 
                               (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // ============================================================
    // WORKOUT SESSIONS (Completed Workouts)
    // ============================================================
    
    match /workout-sessions/{sessionId} {
      // Read: own sessions, or if admin/coach
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrCoach());
      
      // Create: must set userId to own uid
      allow create: if isAuthenticated() && 
                       isValidUserId();
      
      // Update/Delete: own sessions, or if admin
      allow update, delete: if isAuthenticated() && 
                               (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // ============================================================
    // EXERCISE LIBRARY
    // ============================================================
    
    match /exercises/{exerciseId} {
      // Read: public exercises, own exercises, or if admin/coach
      allow read: if isAuthenticated() && 
                     (resource.data.isPublic == true || 
                      resource.data.createdBy == request.auth.uid ||
                      isAdminOrCoach());
      
      // Create: only admins and coaches can create exercises
      // Must set createdBy to own uid
      allow create: if isAdminOrCoach() && 
                       request.resource.data.createdBy == request.auth.uid;
      
      // Update: only creator, admin, or coach can update
      // Cannot change createdBy field
      allow update: if isAuthenticated() && 
                       (resource.data.createdBy == request.auth.uid || isAdmin()) &&
                       request.resource.data.createdBy == resource.data.createdBy;
      
      // Delete: only admins can delete
      allow delete: if isAdmin();
    }
    
    // ============================================================
    // PROGRESS ENTRIES
    // ============================================================
    
    match /progress-entries/{entryId} {
      // Read: own entries, or if admin/coach
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrCoach());
      
      // Create: must set userId to own uid
      allow create: if isAuthenticated() && 
                       isValidUserId();
      
      // Update/Delete: own entries, or if admin
      allow update, delete: if isAuthenticated() && 
                               (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // ============================================================
    // GOALS
    // ============================================================
    
    match /goals/{goalId} {
      // Read: own goals, or if admin/coach
      allow read: if isAuthenticated() && 
                     (resource.data.userId == request.auth.uid || isAdminOrCoach());
      
      // Create: must set userId to own uid
      allow create: if isAuthenticated() && 
                       isValidUserId();
      
      // Update/Delete: own goals, or if admin
      allow update, delete: if isAuthenticated() && 
                               (resource.data.userId == request.auth.uid || isAdmin());
    }
    
    // ============================================================
    // ACTIVITY LOGS (Audit Trail)
    // ============================================================
    
    match /activity-logs/{logId} {
      // Read: admins can read all logs, users can read their own
      allow read: if isAdmin() || 
                     (isAuthenticated() && resource.data.userId == request.auth.uid);
      
      // Create: any authenticated user can create logs for themselves
      allow create: if isAuthenticated() && 
                       isValidUserId();
      
      // Update/Delete: logs are immutable - no updates or deletes allowed
      // Only admins can delete logs if absolutely necessary
      allow update: if false;
      allow delete: if isAdmin();
    }
    
    // ============================================================
    // DEFAULT DENY ALL
    // ============================================================
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}